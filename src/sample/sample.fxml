<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_left" hgap="10" vgap="10" gridLinesVisible="true">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <Label text="Hi..">
        <font>
            <Font name="Calibri light bold" size="25"/>
        </font>
    </Label>
    <Label text="Click on the 'Download All' button to see the demonstration."
           GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4">
        <font>
            <Font name="Calibri light bold" size="25"/>
        </font>
    </Label>
    <Label text="Don't worry. It will not download anything on your computer."
           GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="4">
        <font>
            <Font name="Calibri light bold" size="25"/>
        </font>
    </Label>
        <Label text="File1" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <font>
                <Font size="20"/>
            </font>
        </Label>
        <Label text="File2" GridPane.columnIndex="0" GridPane.rowIndex="4"> <!--padding="10" -->
            <font>
                <Font size="20"/>
            </font>
        </Label>
        <Label text="File3" GridPane.columnIndex="0" GridPane.rowIndex="5"> <!--padding="10" -->
            <font>
                <Font size="20"/>
            </font>
        </Label>
        <Label text="File4" GridPane.columnIndex="0" GridPane.rowIndex="6"> <!--padding="10" -->
            <font>
                <Font size="20"/>
            </font>
        </Label>
    <Button text="Download All" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.rowSpan="4"
    onAction="#onButtonClicked"/>
    <ProgressBar fx:id="progressBar1" GridPane.columnIndex="2" GridPane.rowIndex="3" visible="false"/>
    <ProgressBar fx:id="progressBar2" GridPane.columnIndex="2" GridPane.rowIndex="4" visible="false"/>
    <ProgressBar fx:id="progressBar3" GridPane.columnIndex="2" GridPane.rowIndex="5" visible="false"/>
    <ProgressBar fx:id="progressBar4" GridPane.columnIndex="2" GridPane.rowIndex="6" visible="false"/>
